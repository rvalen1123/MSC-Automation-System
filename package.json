{
  "name": "msc-wound-care-automation",
  "version": "1.0.0",
  "description": "MSC Wound Care Form Automation System",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "railway": "^2.0.17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "bun-types": "latest",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/tests/**",
      "!jest.config.js"
    ]
  }
}
